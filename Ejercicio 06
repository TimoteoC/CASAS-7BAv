import java.util.Scanner;

public class CASAS-7BAv {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.println("Ingrese la edad del chico: ");
        int edad = scanner.nextInt();

        if (edad == 0) {
            System.out.println("El chico estÃ¡ en el jardÃ­n de infantes.");
        } else if (edad >= 1 && edad <= 6) {
            System.out.println("El chico estÃ¡ en primaria.");
        } else if (edad >= 7 && edad <= 12) {
            System.out.println("El chico estÃ¡ en secundaria.");
        } else {
            System.out.println("La edad ingresada no corresponde al rango exigido");
        }
    }
}
